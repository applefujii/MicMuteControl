<Window x:Class="MicControl.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicControl"
        mc:Ignorable="d"
        Title="Setting" Height="174" Width="400" ResizeMode="NoResize" PreviewKeyDown="Win_KeyScan">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Button Content="OK" HorizontalAlignment="Left" Margin="173,95,0,0" VerticalAlignment="Top" Width="89" Click="OKButton_Click" Grid.ColumnSpan="2"/>
        <Button Content="キャンセル" HorizontalAlignment="Left" Margin="21,95,0,0" VerticalAlignment="Top" Width="89" Click="CancelButton_Click" Grid.Column="1"/>
        <Label Content="ホットキー" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_Hotkey" HorizontalAlignment="Left" Height="23" Margin="26,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Grid.ColumnSpan="2" Focusable="False"/>
        <Button x:Name="Button_Scan" Content="スキャン開始" HorizontalAlignment="Left" Margin="35,41,0,0" VerticalAlignment="Top" Width="75" Click="Scan_Click" Grid.Column="1"/>

    </Grid>
</Window>
